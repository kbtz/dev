{
	"compilerOptions": {
		"baseUrl": "./src",
		"paths": {
			"+*": [
				"util/*.ts"
			],
			"<*": [
				"comp/*"
			],
			"-*": [
				"attr/*.ts"
			],
			"#*": [
				"file/*"
			],
			"|*": [
				"*.ts"
			],
		},
		"target": "esnext",
		"useDefineForClassFields": true,
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"lib": [
			"esnext",
			"dom"
		]
	},
	"include": [
		"env/type/*.ts",
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue"
	]
}